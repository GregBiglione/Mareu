<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reunion_list.AddReunionActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_scroll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addAboutLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/about"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_create_black_24dp"
                    android:nextFocusDown="@id/addDateReunion"
                    android:background="@drawable/edit_text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addDayLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/addDateReunion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:layout_marginTop="20dp"
                    android:focusable="true"
                    android:nextFocusDown="@id/addHourReunion"
                    android:background="@drawable/button"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:drawableStart="@drawable/ic_date_range_black_24dp"
                    android:background="@drawable/edit_text"
                    android:focusable="false"/>

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:id="@+id/mainHourLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="1">

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/addStartHourLyt"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:layout_weight="0.5">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/startTimeEdit"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="time"
                           android:drawableStart="@drawable/ic_hour_black_24dp"
                           android:background="@drawable/edit_text"
                           android:focusable="false"
                           style="@style/ml"/>

                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/addEndHourLyt"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:layout_weight="0.5">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/endTimeEdit"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="time"
                           android:drawableStart="@drawable/ic_hour_black_24dp"
                           android:background="@drawable/edit_text"
                           android:focusable="false"
                           style="@style/mr"/>

                   </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>

                <Button
                    android:id="@+id/addHourReunion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hour"
                    android:layout_marginTop="20dp"
                    android:focusable="true"
                    android:nextFocusDown="@id/spinnerRoom"
                    android:background="@drawable/button"/>

            </LinearLayout>

            <!--<com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addHourLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/startAndEndTimeLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/startTimeEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:drawableStart="@drawable/ic_hour_black_24dp"
                        android:background="@drawable/edit_text"
                        android:focusable="false"
                        style="@style/ml"
                        android:layout_weight="0.5"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/endTimeEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:drawableStart="@drawable/ic_hour_black_24dp"
                        android:background="@drawable/edit_text"
                        android:focusable="false"
                        style="@style/mr"
                        android:layout_weight="0.5"/>

                </LinearLayout>

                <Button
                    android:id="@+id/addHourReunion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hour"
                    android:layout_marginTop="20dp"
                    android:focusable="true"
                    android:nextFocusDown="@id/spinnerRoom"
                    android:background="@drawable/button"/>


            </com.google.android.material.textfield.TextInputLayout>-->

                <Spinner
                    android:id="@+id/spinnerRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:nextFocusDown="@id/addParticipantsButton"
                    android:background="@drawable/edit_text"
                    />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addParticipantsLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/addParticipantsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/participants"
                    android:layout_marginTop="20dp"
                    android:nextFocusDown="@id/create"
                    android:background="@drawable/button"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addParticipantsEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="1"
                    android:maxLines="20"
                    android:focusable="false"
                    android:drawableStart="@drawable/ic_group_add_black_24dp"
                    android:background="@drawable/edit_text"
                    android:drawablePadding="5dp"
                    android:nextFocusDown="@id/create"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:enabled="false"
                android:hint="@string/save"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/button_save"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>