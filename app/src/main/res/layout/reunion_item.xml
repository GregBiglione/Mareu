<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/reunion_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:id="@+id/main_container_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/reunion_image"
        app:layout_constraintBottom_toBottomOf="@id/reunion_image"
        app:layout_constraintStart_toEndOf="@id/reunion_image"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reunion_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabriquer un sabre laser"/>

            <TextView
                android:id="@+id/dash_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/dash_style"
                android:text="@string/dash"/>

            <TextView
                android:id="@+id/reunion_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salle sagittaire"/>

            <TextView
                android:id="@+id/dash_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/dash_style"
                android:text="@string/dash"/>

            <TextView
                android:id="@+id/reunion_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 juillet 2020"/>

            <TextView
                android:id="@+id/dash_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash"/>

            <TextView
                android:id="@+id/reunion_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14h30"/>


        </LinearLayout>

        <TextView
            android:id="@+id/reunion_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="vishnu@gmail, xolotl@gmail.com, huitzilopoctli@gmail.com"
            />


    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/main_container_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@id/main_container_layout"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_delete_black_24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>