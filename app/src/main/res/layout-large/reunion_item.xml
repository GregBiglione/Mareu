<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/openParticipantsList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/reunion_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignStart="@id/reunion_image"
        android:layout_marginStart="60dp"
        android:layout_alignEnd="@id/delete_button"
        android:layout_marginEnd="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/reunion_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/line_one"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="0.1"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/dash_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/dash_style_line_one"
                android:text="@string/dash"/>

            <TextView
                android:id="@+id/reunion_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/line_one"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="0.9"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reunion_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dash_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash"
                style="@style/dash_style_line_two"/>

            <TextView
                android:id="@+id/startReunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a"
                style="@style/dash_style_line_two"/>

            <TextView
                android:id="@+id/endReunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_delete_black_24dp" />

</RelativeLayout>